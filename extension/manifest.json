{
  "manifest_version": 3,
  "name": "Legal Guardian",
  "version": "1.0.0",
  "description": "AI-powered legal document analyzer",
  "permissions": ["storage", "activeTab", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open LegalGuard"
  }
}
